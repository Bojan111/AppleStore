@page
@model Apple.Pages.Customer.Home.DetailsModel
@{ ViewData["Title"] = "Details"; }


<div class="">
	<form method="post">
		<input type="hidden" asp-for="ShoppingCartObj.CatalogId" />
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<div class="container mb-5">
			<div>
				<div class="ml-0 p-1 pl-5 pr-5 row container">
					<div class="">
						<h1 class="display-4">@Model.ShoppingCartObj.Catalog.ProductType.Name</h1>
					</div>
					<div class="col-12 col-md-6 text-md-right">
						<h1 class="display-4"> @((Model.ShoppingCartObj.Catalog.Price))€</h1>
					</div>
				</div>
				<div class="card-body">
					<div class="container rounded p-2">
						<div class="row">
							<div class="col-4 p-1 text-center">
								<img src="@Model.ShoppingCartObj.Catalog.Image" style="width:100%" class="rounded pr-4" />
							</div>
							<div class="col-12 col-lg-8">
								<div class="row">
									<p class="text-secondary">@Html.Raw(Model.ShoppingCartObj.Catalog.Specifications)</p>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="card-footer">
					<div class="row">
						<div class="col-12 col-md-6 pb-1 ">
							<a asp-page="Index" class="btn btn-outline-success btn-square form-control btn-lg" style="height:50px;">Back to List</a>
						</div>
						<div class="col-12 col-md-6 ">
							<button type="submit" class="btn btn-outline-warning btn-square form-control btn-lg" style="height:50px;">Add to Cart</button>
						</div>
					</div>
				</div>
			</div>
		</div>
	</form>
</div>
