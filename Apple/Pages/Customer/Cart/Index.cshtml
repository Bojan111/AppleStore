@page
@model Apple.Pages.Customer.Cart.IndexModel
@{
    ViewData["Title"] = "Index";
}

    <form method="post">

        <br />

        @if (Model.OrderDetailsCartVM.ShoppingCarts.Count > 0)
        {

            <input asp-for="@Model.OrderDetailsCartVM.ShoppingCarts[0].ApplicationUserId" hidden />
            <div class="">
                <div class="container mb-5">
                    <div>
                        <div class="ml-0 row container">
                            <div class="col-6 display-4" style="font-size: 20px">
                                <i class="fa fa-shopping-bag"></i> &nbsp;
                                Shopping Cart

                            </div>
                            <div class="col-6 text-right">
                                <a asp-page="../Home/Index" class="btn btn-outline-success btn-sm">Continue Shopping</a>
                            </div>
                        </div>
                        <div class="card-body">
                            @foreach (var item in Model.OrderDetailsCartVM.ShoppingCarts)
                            {
                                <div class="row">
                                    <div class="d-none d-lg-block col-lg-2 text-center py-2 mt-4">
                                        <img src="@item.Catalog.Image" class="mt-5" style="margin-left:6.5rem" />
                                    </div>
                                    <div class="col text-sm-center text-lg-left">
                                        <h4 class="display-4">@item.Catalog.Name</h4>
                                    </div>
                                    <div class="col text-sm-center  text-right row">
                                        <div class="col-4 text-md-right">
                                            
                                        </div>
                                        <div class="col-6 col-sm-4 col-lg-6">
                                            <div class="mb-3 float-right">
                                                <button type="submit" class="btn btn-outline-primary" asp-page-handler="plus" asp-route-cartId="@item.Id">
                                                    <i class="fas fa-plus"></i>
                                                </button>
                                            </div>
											<h6 class="mr-3 ml-3 mt-2 float-right">@item.Count</h6>
                                            <div class="mb-3 float-right ml-3">
                                                <button type="submit" class="btn btn-outline-warning" asp-page-handler="minus" asp-route-cartId="@item.Id">
                                                    <i class="fas fa-minus"></i>
                                                </button>
                                            </div>
                                        </div>
                                        <div class="col-10 col-sm-4 col-lg-2 text-right">
                                            <button type="submit" class="btn btn-outline-danger" asp-page-handler="remove" asp-route-cartId="@item.Id">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                <hr />
                            }

                            <div class="row">
                                <div class="col-12 col-md-5">

                                </div>
                                <div class="col-12 col-md-6 offset-md-1 col-lg-4 offset-lg-3 pr-4">
                                    <ul class="list-group">
                                        <li class="list-group-item d-flex justify-content-between bg-dark">
                                            <span class="display-4 text-white" style="font-size: 20px"> Total: </span>
                                            <strong class="display-4 text-white" style="font-size: 20px"><span>@Model.OrderDetailsCartVM.OrderHeaders.OrderTotal</span>€</strong>
                                        </li>
                                    </ul>
                                </div>
                            </div>


                        </div>
                        <div class="">
                            <div class="col-12 col-lg-4 offset-lg-8 col-md-6 offset-md-6">
                                <a asp-page="Pay" class="btn btn-outline-primary form-control mb-3">Next</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="display-4 mb-5">
                Please add items to shopping cart.
            </div>
        }
    </form>

