@page
@model Apple.Pages.Admin.Category.EditModel


<form method="post" asp-action="Edit">
	<div class="container mb-5">
		<div class="row px-2 mx-2">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			@if (Model.Category.Id != 0)
			{
			<input type="hidden" asp-for="Category.Id" />}

			<div class="col-12 px-3 mb-4">
				<div class="" style="border-radius: 10px">
					<h2 class="display-2">@(Model.Category.Id != 0 ? "Update" : "Create") Category</h2>
				</div>
			</div>

			<div class="col-8 pt-3">
				<div class="form-group row">
					<div class="col-3">
						<label class="lead" asp-for="Category.Name"></label>
					</div>
					<div class="col-9">
						<input class="form-control" asp-for="Category.Name" />
						<span class="text-danger" asp-validation-for="Category.Name"></span>
					</div>
				</div>
				<div class="form-group row">
					<div class="col-3">
						<label class="lead" asp-for="Category.DisplayOrder"></label>
					</div>
					<div class="col-9">
						<input class="form-control" asp-for="Category.DisplayOrder" />
						<span class="text-danger" asp-validation-for="Category.DisplayOrder"></span>
					</div>
				</div>
				<div class="form-group row">
					<div class="col-9 offset-3">
						<div class="row">
							<div class="col-6">
								<button type="submit" class="btn btn-outline-primary form-control">@(Model.Category.Id != 0 ? "Update" : "Create")</button>
							</div>
							<div>
								<a asp-page="./Index" class="btn btn-outline-success form-control">Back to List</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>

